<% provide(:title, 'Edit Client') %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
<%= form_for(@client) do |f| %>
<%= render 'shared/error_messages' %>
<%= f.label :Name %>
 <%= f.text_field :name, :placeholder => " Your Name" %> 
<%= f.label :email %>
<%= f.email_field :email, :placeholder => "Your Email Address" %> 
<%= f.label :Choose_your_District %> 
<%= f.text_field :district, :placeholder => "Your district" %>
<%= f.label :password %>
<%= f.password_field :password, :placeholder => "Your Password" %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, :placeholder => "Confirmation Your Password" %>
 <%= f.submit "Save changes", class: "btn btn-large btn-primary" %> 

    <% end %>
   
  </div>
</div>
